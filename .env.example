# .env.example
# Database Configuration
DATABASE_URL=postgresql://accounting_user:password@localhost:5432/accounting_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///accounting.db

# Security Keys (Generate strong keys for production!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=backend.app:app

# Organization Settings
ORG_NAME=Your NGO Organization Name
ORG_NAME_AR=اسم منظمتكم
ORG_EMAIL=contact@your-ngo.org
ORG_PHONE=+1-234-567-8900
ORG_ADDRESS=123 Main Street, City, Country

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# API Settings
API_RATE_LIMIT=1000 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_FOLDER=./backups
BACKUP_RETENTION_DAYS=30