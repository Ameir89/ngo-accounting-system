# .env.production

# Application
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secure-secret-key-64-chars-long-random-string
JWT_SECRET_KEY=your-jwt-secret-key-64-chars-long-random-string

# Database
DATABASE_URL=postgresql://ngo_user:secure_password@postgres:5432/ngo_accounting
DB_PASSWORD=secure_database_password

# Redis
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=secure_redis_password
CELERY_BROKER_URL=redis://:redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/0

# Organization
ORG_NAME=Your NGO Organization Name
ORG_NAME_AR=اسم منظمتكم
ORG_EMAIL=finance@your-ngo.org
ORG_PHONE=+1-234-567-8900
ORG_ADDRESS=123 Main Street, City, Country

# Email (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
SSL_REDIRECT=True

# File Storage
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=52428800  # 50MB
BACKUP_FOLDER=/app/backups
BACKUP_RETENTION_DAYS=90

# Monitoring
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance
API_RATE_LIMIT=1000 per hour
CACHE_TIMEOUT=300